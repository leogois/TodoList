{
  "compilerOptions": {
    "target": "es5",
    "lib": [
      "es5",
      "dom",
      "dom.iterable",
      "esnext"
    ],
    "types": [
      "cypress"
    ],
    "allowJs": true,
    "skipLibCheck": true,
    "strict": true,
    "noEmit": true,
    "module": "commonjs",
    "resolveJsonModule": true,
    "isolatedModules": true,
    "jsx": "preserve",
    "incremental": true,
    "plugins": [
      {
        "name": "next"
      }
    ],
    "paths": {
      "@/*": [
        "./src/*"
      ],
      "@ui/*": [
        "./src/ui/*"
      ],
      "@ui/schema": [
        "./src/ui/schema/*"
      ],
      "@db-crud-todo": [
        "./core/crud.ts"
      ],
      "@server/*": [
        "./src/server/*"
      ],
      "@server/schema/": [
        "./src/schema/*"
      ]
    },
    "esModuleInterop": true,
    "moduleResolution": "node"
  },
  "include": [
    "next-env.d.ts",
    "**/*.ts",
    "**/*.tsx",
    ".next/types/**/*.ts",
    "src/app/pages/api/route.ts"
  ],
  "exclude": [
    "node_modules"
  ]
}
